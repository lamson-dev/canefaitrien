                <action android:name="com.cainefaitrient.spacetrader.Info" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MarketPlaceActivity" >
            android:label="@string/title_activity_marketplace" >
            <intent-filter>
                <action android:name="com.cainefaitrient.spacetrader.MARKETPLACE" />

                <category android:name="android.intent.category.DEFAULT" />
